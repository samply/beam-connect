    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'beam-httpusher'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=beam-httpusher",
                    "--package=beam-httpusher"
                ],
                "filter": {
                    "name": "beam-httpusher",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": { 
                "RUST_LOG": "tracing=info,hyper=info,debug",
                "APP_ID": "pusher1.proxy23.localhost",
                "PROXY_APIKEY": "Pusher1Secret",
                "PROXY_URL": "http://localhost:8081"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'beam-httpusher'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=beam-httpusher",
                    "--package=beam-httpusher"
                ],
                "filter": {
                    "name": "beam-httpusher",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}